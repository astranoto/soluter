---
import { Icon } from "astro-icon";
import { twMerge } from "tailwind-merge";
interface Props {
  title: string;
  icon: string;
  iconClasses: string;
  subicon: string;
  subiconClasses: string;
  paragraphs: string[];
}
const props = Astro.props;
---

<div>
  <div class="flex flex-col items-center justify-start space-y-2 xl:h-32">
    <Icon name={props.icon} class={twMerge(props.iconClasses)} />
    <p class="text-center font-bold">{props.title}</p>
    <Icon name={props.subicon} class={twMerge(props.subiconClasses)} />
  </div>
  <div class="mt-2 text-center">
    {props.paragraphs.map((paragraph) => <p class="">{paragraph}</p>)}
  </div>
</div>
