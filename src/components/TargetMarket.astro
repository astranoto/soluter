---
import { Icon } from "astro-icon";
import { twMerge } from "tailwind-merge";

interface Props {
  title: string;
  titleContainerClasses?: string;
  subtitle: string;
  icon: string;
  iconClasses?: string;
  paragraphs: string[][];
}

const {
  title,
  subtitle,
  icon,
  paragraphs,
  titleContainerClasses,
  iconClasses,
} = Astro.props;
---

<div class="flex flex-col items-center lg:items-start">
  <div
    class={twMerge(
      "flex flex-col lg:flex-row lg:items-end items-center justify-start lg:space-x-2",
      titleContainerClasses,
    )}
  >
    <h3 class="order-2 font-bold lg:order-1">{title}</h3>
    <Icon
      name={icon}
      class={twMerge("h-10 order-1 lg:order-2 mb-2 lg:mb-0", iconClasses)}
    />
  </div>
  <p class="mt-6 text-center font-bold lg:text-start">{subtitle}</p>
  {
    paragraphs.map((paragraph) =>
      paragraph.map((section) => (
        <p class="text-center lg:text-start">{section}</p>
      )),
    )
  }
</div>
