---
import { Icon } from "astro-icon";
import { twMerge } from "tailwind-merge";

interface Props {
  title: string;
  paragraphs: string[];
}

const { title, paragraphs } = Astro.props;
---

<details class="rounde group mb-4" open>
  <summary
    class="relative flex cursor-pointer list-none flex-wrap
    items-center rounded focus-visible:outline-none"
  >
    <div class="group flex flex-col">
      <div>
        <h2 class="mb-1 items-center font-bold">{title}</h2>
      </div>
    </div>
    <div class="flex w-10 items-center justify-center">
      <div
        class="ml-1 origin-left border-8 border-transparent
        border-l-black transition-transform group-open:rotate-90"
      >
      </div>
    </div>
  </summary>
  <p>
    {paragraphs.map((paragraph) => <p class="text-start">{paragraph}</p>)}
  </p>
</details>
